<!--forEach[latest_posts]-->
<div class="column v3 pad">
    <article class="small-article">
        <div class="left">
            <span class="image small">
                <img src="<!--{FeatureImage}-->" alt="<!--{Title}-->" width="50"/>
            </span>
        </div>
        <div class="right">
            <h3><!--{Title}--></h3>
            <a href="/read/<!--{URI}-->">
                <span>read article</span>
                &gt;
                <time><!--{PostTime}--></time> 
            </a>
        </div>
    </article>
</div>
<!--end[latest_posts]-->